<Window x:Class="Nobel.BeamerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nobelprijzen Fysiologie door Erwin de Haan - Beamer Window" Height="336" Width="483" WindowStartupLocation="CenterScreen" KeyDown="Window_KeyDown" Closing="Window_Closing">
    <Window.Background>
        <SolidColorBrush Color="Black"/>
    </Window.Background>
    <Grid>
        <Label x:Name="stopwatchLabel" Content=".." Margin="10,10,10,111" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="56" Foreground="White"/>
        <Grid Height="96" Margin="10,0,10,10" VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Label x:Name="teamATime" Content="Label" FontSize="48" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <Label x:Name="teamBTime" Content="Label" Grid.Column="1" FontSize="48" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        </Grid>        

    </Grid>
</Window>
